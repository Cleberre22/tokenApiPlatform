{% extends 'base.html.twig' %}

{% block title %}Tokens
{% endblock %}

{% block body %}
<section class="container">
<h1 class="my-3">Token</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ token.id }}</td>
			</tr>
			<tr>
				<th>Nom de la clé</th>
				<td>{{ token.keyName }}</td>
			</tr>
			<tr>
				<th>Clé</th>
				<td>{{ token.token }}</td>
			</tr>
			<tr>
				<th>Droits</th>
				<td>{{ token.permission }}</td>
			</tr>
			<tr>
				<th>Généré par</th>
				<td>{{ token.user.firstname }}
					{{ token.user.lastname }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_tokens_index') }}">back to list</a>

	<a href="{{ path('app_tokens_edit', {'id': token.id}) }}">edit</a>

	{{ include('tokens/_delete_form.html.twig') }}
</section>
	
{% endblock %}
