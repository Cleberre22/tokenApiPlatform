{% extends 'base.html.twig' %}

{% block title %}Tokens index
{% endblock %}

{% block body %}
	<section class="container">
		<h1 class="my-3">Tokens index</h1>

		<table class="table table-hover">
			<thead>
				<tr>
					<th>Id</th>
					<th>Nom de la clé</th>
					<th>Token</th>
					<th>Généré par</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for token in tokens %}
					<tr>
						<td>{{ token.id }}</td>
						<td>{{ token.keyName}}</td>
						<td>{{ token.token }}</td>
						<td>{{ token.user.firstname }}
							{{ token.user.lastname }}</td>
						<td>
							<a href="{{ path('app_tokens_show', {'id': token.id}) }}">show</a>
							<a href="{{ path('app_tokens_edit', {'id': token.id}) }}">edit</a>
							{{ include('tokens/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_tokens_new') }}">Create new</a>
	</section>

{% endblock %}
