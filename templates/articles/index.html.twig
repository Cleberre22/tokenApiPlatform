{% extends 'base.html.twig' %}

{% block title %}Articles index
{% endblock %}

{% block body %}
	<section class="container">
		<h1 class="my-3">Articles index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
                    <th>Category</th>
					<th>Title</th>
					<th>Content</th>
					<th>Auteur</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for article in articles %}
					<tr>
						<td>{{ article.id }}</td>
                        <td>{{ article.category}}</td>
						<td>{{ article.title }}</td>
						<td>{{ article.content }}</td>
						<td>{{ article.user.firstname }}
							{{ article.user.lastname }}</td>
						<td>
							<a href="{{ path('app_articles_show', {'id': article.id}) }}">show</a>
							<a href="{{ path('app_articles_edit', {'id': article.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_articles_new') }}">Create new</a>
	</section>

{% endblock %}
